  "version": "0.2.0",
  "configurations": [{
      "name": "Python: Run Main (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: Test Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": [
        "-m",
        "pytest"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (External Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "externalTerminal"
    },
    {
      "name": "Python: Run Main (External Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "externalTerminal"
    },
    {
      "name": "Pytest: Test Current File (External Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "args": [
        "-m",
        "pytest"
      ],
      "console": "externalTerminal"
    },
  ]
}